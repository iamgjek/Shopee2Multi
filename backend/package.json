{
  "name": "shopee2multi-backend",
  "version": "1.0.0",
  "description": "Shopee2Multi Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-sql",
    "copy-sql": "mkdir -p dist/db && cp src/db/*.sql dist/db/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:error-code": "tsx src/db/migrate-error-code.ts",
    "add-role": "tsx src/db/add-role.ts",
    "add-contact-table": "tsx src/db/add-contact-table.ts",
    "seed": "tsx src/db/seed.ts",
    "test-template": "tsx src/test-template.ts",
    "postinstall": "npx playwright install chromium --with-deps || true",
    "test": "jest"
  },
  "keywords": ["shopee", "ecommerce", "saas"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "playwright": "^1.40.0",
    "exceljs": "^4.4.0",
    "sharp": "^0.32.6",
    "axios": "^1.6.2",
    "zod": "^3.22.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}
